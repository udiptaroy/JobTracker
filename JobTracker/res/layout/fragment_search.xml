<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/searchtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:layout_toLeftOf="@+id/searchImg"
        android:layout_toStartOf="@+id/searchImg"
        android:ems="10"
        android:inputType="none" >

        <requestFocus />
    </EditText>

    <ImageView
        android:id="@+id/micImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/searchtext"
        android:layout_alignEnd="@+id/searchtext"
        android:layout_alignTop="@+id/searchtext"
        android:src="@drawable/device_access_mic" 
        android:contentDescription="@string/search_mic"/>

    <ImageView
        android:id="@+id/searchImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/searchtext"
        android:contentDescription="@string/search_mic"
        android:src="@drawable/action_search" />

    <ListView
        android:id="@+id/searchJobList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/searchtext" >

    </ListView>

</RelativeLayout>